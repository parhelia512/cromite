// https://drafts.csswg.org/web-animations-2/#the-animationtrigger-interface

// https://github.com/w3c/csswg-drafts/issues/12611#issue-3326243729
enum AnimationTriggerBehavior {
  "play",
  "pause",
  "reset",
  "play-once",
  "play-alternate",
  "play-forwards",
  "play-backwards",
  "play-pause",
  "replay",
};

[
    Exposed=Window,
    RuntimeEnabled=AnimationTrigger
] interface AnimationTrigger {
  [RaisesException] void addAnimation(Animation animation, DOMString action, AnimationTriggerBehavior behavior);
  void removeAnimation(Animation animation);
};
